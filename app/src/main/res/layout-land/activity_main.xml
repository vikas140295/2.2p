<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/iMiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/Miles"

        />

    <EditText
        android:id="@+id/iInches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Inches"
        android:inputType="number"
        android:layout_below="@id/iMiles"
        />

    <EditText
        android:id="@+id/iFoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Feet"
        android:inputType="number"
        android:layout_below="@id/iInches"
        />

    <Button
        android:id="@+id/iConvert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox"
        android:text="Convert" />

    <TextView
        android:id="@+id/iResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iConvert"

        android:text="TextView" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/meter"
        android:layout_below="@id/iFoot"/>
</RelativeLayout>